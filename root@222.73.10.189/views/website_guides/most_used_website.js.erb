
display_str = $('#most_used_website').css('display')
if (display_str == "none")
{$('#most_used_website').css('display','block')}
else
{$('#most_used_website').css('display','none')}

<% if user_signed_in? %>
  <%for j in 1..12%>
    $('#title<%=j%>').val('')
    $('#link<%=j%>').val('')
    $('#link_id<%=j%>').val('')
    $('#del_link<%=j%>').attr('href','')
  <%end%>
  <%i=1
  for site in @website_guides%>
    $('#title<%=i%>').val('<%=site.name%>')
    $('#link<%=i%>').val('<%=site.url%>')
    $('#link_id<%=i%>').val('<%=site.id%>')
    $('#del_link<%=i%>').attr('href','/website_guides/<%=site.id%>?ord_id=<%=i%>')
    <%i=i+1
  end%>
<%else%>
  $('#most_used_website').html("<center><font color="/red"/>请先登录</font></center>")
<%end%>