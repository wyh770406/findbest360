<%= render 'base' %>
<div id="adminpanel_composite_sites">
  <table class="wice_grid">
    <thead>
      <tr class="wice_grid_title_row">

        <th>综合商城名称</th>
        <th>综合商城简介</th>
        <th>综合商城logo</th>
        <th>时间</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @composite_sites.each_with_index do |item,i| %>
        <tr class="<%= i.odd? ? "odd" : "even" %>">

          <td width="20%"><%= item.name %></td>
          <td width="20%"><%= item.desc %></td>
          <td width="20%"><%= image_tag(item.compositelogo_url) if item.compositelogo? %></td>
          <td width="10%"><%= l item.created_at.getlocal, :format => :short %></td>
          <td width="20%">
            <%= link_to '修改', edit_adminpanel_composite_site_path(item.id) %>&nbsp;&nbsp;

            <%= link_to image_tag("/images/wice_grid/delete.png", :style => "margin-bottom:-4px;border:0"), adminpanel_composite_site_path(item.id), :method => :delete, :confirm => '确定要删除吗?' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @composite_sites %>
</div>