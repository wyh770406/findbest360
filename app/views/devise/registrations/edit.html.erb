<% pagetitle("编辑账户") %>
<div class="main">
  <%= devise_error_messages! %><br/>
  <h2>设置账户 <%#= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

    <p><%= f.label '用户名' %><br />
      <%= f.text_field :name %></p>

    <p><%= f.label :email %><br />
      <%= f.email_field :email %></p>

    <p><%= f.label '新密码' %> <i>(如果你不想改密码，请保留此项为空)</i><br />
      <%= f.password_field :password %></p>

    <p><%= f.label '确认密码' %><br />
      <%= f.password_field :password_confirmation %></p>

    <p><%= f.label '旧密码' %> <i>(我们需要你的旧密码来确认你的更新)</i><br />
      <%= f.password_field :current_password %></p>

    <p><%= f.submit "更新" %></p>
  <% end %>

  <h3>取消账户</h3>

  <p>不开心? <%= link_to "取消账户", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

  <%= link_to "返回", :back %>
</div>