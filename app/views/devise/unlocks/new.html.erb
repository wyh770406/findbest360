<div class="main">
  <h2>重新发送解锁指令</h2>

  <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.label :email %><br />
      <%= f.email_field :email %></p>

    <p><%= f.submit "重新发送解锁指令" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>